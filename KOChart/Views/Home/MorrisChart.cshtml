<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Knockout Morris</title>
    <link href="~/Scripts/Site/morris.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">*@
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/Site/raphael-min.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.2.7/raphael.min.js"></script>*@
    <script src="~/Scripts/Site/morris.min.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>*@
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/knockout-morris.js"></script>
</head>
<body>
    <div data-bind="morris: {type: 'Line', data: line, xkey: 'year', ykeys: ['value'], labels: ['Value']}"
         style="width: 500px; float: left"></div>
    @*<div data-bind="morris: {type: 'Area', data: area, xkey: 'y', ykeys: ['a','b'], labels: ['Series A', 'Series B']}"
        style="width: 500px; float: left"></div>*@

    <div data-bind="morris: {type: 'Area', data: area, xkey: 'period',smooth: 'false' ,ykeys: ['OPD','ICU'], labels: ['OPD $', 'ICU $'],pointSize:'0',fillOpacity: '0.4', pointStrokeColors:['#00c292', '#00c292'], behaveLikeLine: 'true',gridLineColor: '#00c292',lineWidth:'0',hideHover: 'auto',lineColors: ['#00c292', '#00c292'],resize: 'true'}"
         style="width: 500px; float: left"></div>

    <div data-bind="morris: {type: 'Donut', data: donut}"
         style="width: 500px; float: left"></div>
    <div data-bind="morris: {type: 'Bar', data: bar, xkey: 'y', ykeys: ['a','b'], labels: ['Series A', 'Series B']}"
         style="width: 500px; float: left"></div>
    <script>
        var model = {
            line: ko.observable(),
            donut: ko.observable(),
            bar: ko.observable(),
            area: ko.observable()
        };

        model.line([
            { year: '2008', value: 20 },
            { year: '2009', value: 10 },
            { year: '2010', value: 5 },
            { year: '2011', value: 5 },
            { year: '2012', value: 20 }
        ]);
        model.donut([
            { label: "Download Sales", value: 12 },
            { label: "In-Store Sales", value: 30 },
            { label: "Mail-Order Sales", value: 20 }
        ]);
        model.bar([
            { y: '2006', a: 100, b: 90 },
            { y: '2007', a: 75, b: 65 },
            { y: '2008', a: 50, b: 40 },
            { y: '2009', a: 75, b: 65 },
            { y: '2010', a: 50, b: 40 },
            { y: '2011', a: 75, b: 65 },
            { y: '2012', a: 100, b: 90 }
        ]);
        //model.area([
        //    { y: '2006', a: 100, b: 90 },
        //    { y: '2007', a: 75, b: 65 },
        //    { y: '2008', a: 50, b: 40 },
        //    { y: '2009', a: 75, b: 65 },
        //    { y: '2010', a: 50, b: 40 },
        //    { y: '2011', a: 75, b: 65 },
        //    { y: '2012', a: 100, b: 90 }
        //]);
        model.area([{
            period: '2010',
            OPD: 0,
            ICU: 0,
        }, {
            period: '2011',
            OPD: 130,
            ICU: 100,
        }, {
            period: '2012',
            OPD: 30,
            ICU: 60,
        }, {
            period: '2013',
            OPD: 30,
            ICU: 200,
        }, {
            period: '2014',
            OPD: 200,
            ICU: 150,
        }, {
            period: '2015',
            OPD: 105,
            ICU: 90,
        },
    {
        period: '2016',
        OPD: 250,
        ICU: 150,
    }]);

        ko.applyBindings(model);
    </script>
</body>
</html>